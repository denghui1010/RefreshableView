<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huilan.refreshableview.sample" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Click2LoadActivity" />
        <activity android:name=".AutoLoadActivity" />
        <activity android:name=".Pull2RefreshActivity" />
        <activity android:name=".ExpandableListActivity" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".ScrollViewActivity" />
        <activity android:name=".ImagePagerActivity" />
        <activity android:name=".ViewPagerPull2RActivity" />
    </application>

</manifest>
